<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Widget.App.MySlider" parent="@style/Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/My_Tooltip</item>
        <!--  <item name="materialThemeOverlay">@style/ThemeOverlay.Slider</item> -->
    </style>

    <style name="My_Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <!-- background color of the Tooltip -->
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>


    <style name="TextAppearance.App.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/josefin_sans_bold</item>
        <item name="android:textColor">?attr/textFillColor</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/josefin_sans_regular</item>
        <item name="android:textColor">?attr/textAppearanceCaption</item>
    </style>
</resources>